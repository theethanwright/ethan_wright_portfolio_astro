        </a>
    </div>
    <!--Footer-->
    <Footer Primary='About Me' PrimaryLink='/about/' Secondary='Check Out the <br>Playground' SecondaryLink='/playground/'/>
    <div class="snap-start relative z-10 grid-cols-scale h-dvh bg-black dark:bg-white footer p-3 pt-7 lg:p-6 lg:pt-9 rounded-2xl">
