---
import ResourceGridDB from '../components/ResourceGridDB.astro';
import ResourceGridColor from '../components/ResourceGridColor.astro';
import ResourceGridType from '../components/ResourceGridType.astro';
import ResourceGridIcons from '../components/ResourceGridIcons.astro';
import ResourceGridArchive from '../components/ResourceGridArchive.astro';
import ResourceGridBooks from '../components/ResourceGridBooks.astro';
import ResourceGridDA from '../components/ResourceGridDA.astro';
import ResourceGridDecks from '../components/ResourceGridDecks.astro';
import ResourceGridDR from '../components/ResourceGridDR.astro';
import ResourceGridImagery from '../components/ResourceGridImagery.astro';
import ResourceGridMockups from '../components/ResourceGridMockups.astro';
import ResourceGridWUI from '../components/ResourceGridWUI.astro';
---



<div class="grid grid-cols-2 gap-x-2 gap-y-5 md:grid-cols-4 md:gap-x-[20px] md:gap-y-[40px]" id="resource-list">
<ResourceGridDB/>
<ResourceGridColor/>
<ResourceGridType/>
<ResourceGridDA/>
<ResourceGridIcons/>
<ResourceGridArchive/>
<ResourceGridBooks/>
<ResourceGridDecks/>
<ResourceGridDR/>
<ResourceGridImagery/>
<ResourceGridMockups/>
<ResourceGridWUI/>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const resourceList = document.getElementById('resource-list');
        const resourceCards = Array.from(resourceList.children);
        
        // Shuffle the resource cards array
        for (let i = resourceCards.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [resourceCards[i], resourceCards[j]] = [resourceCards[j], resourceCards[i]];
        }

        // Clear the resource list and append the shuffled resource cards
        resourceList.innerHTML = '';
        resourceCards.forEach(card => resourceList.appendChild(card));
    });
</script>