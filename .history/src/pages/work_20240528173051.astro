<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="app.js"></script>
    <script defer src="work/public/app.js"></script>
    <link rel="stylesheet" href="public/animations.css">
    <link rel="stylesheet" href="public/styles.css">
    <link rel="stylesheet" href="public/work/public/styles.css">
    <link rel="icon" type="image/x-icon" href="public/favicon.png">
    <meta property="og:image" content="/share_img.png">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="1024">
    <meta property="og:image:height" content="1024">
    <title>Work</title>
</head>
<body class="bg-white dark:bg-black box-border">
    <Navbar />
    <Menu />
    <div class="h-screen overflow-y-scroll snap-y snap-mandatory">
        <ProjectContainer Subject='Event Branding' Role='Creative Director' Timeline='6 Weeks' Preview='work/public/images/3.jpg'/>
    <div class="snap-start grid-cols-scale grid-rows-[min-content_min-content_auto] p-3 pt-20 h-screen md:px-8 lg:pt-40 lg:grid-rows-[min-content_auto]">
