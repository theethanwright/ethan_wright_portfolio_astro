          <video class="img-full reveal" autoplay="" loop="" muted playsinline="" data-object-fit="cover">
            <source src="/project-leBlond/37_1.mp4" type="video/mp4"/>
          </video>
          <Image src={img24} alt="" class="img-full reveal" />
          <video class="img-full reveal" autoplay="" loop="" muted playsinline="" data-object-fit="cover">
            <source src="/project-leBlond/38_1.mp4" type="video/mp4"/>
          </video>
          <Image src={img26} alt="" class="img-full reveal" />
          <video class="img-full reveal" autoplay="" loop="" muted playsinline="" data-object-fit="cover">
            <source src="/project-leBlond/35_1.mp4" type="video/mp4"/>
          </video>
          <Image src={img28} alt="" class="img-full reveal" />
          <Image src={img29} alt="" class="img-full reveal" />
          <Image src={img30} alt="" class="img-left reveal" />
          <Image src={img31} alt="" class="img-right reveal" />
          <Image src={img32} alt="" class="img-full reveal" />
  </div>
</div>
<!--Footer-->
<Footer Primary='Next Project' PrimaryLink='project-play' Secondary='Check Out the Playground' SecondaryLink='playground'/></div>
